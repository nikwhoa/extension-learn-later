{
  "manifest_version": 3,
  "name": "Learn Later",
  "version": "1.0",
  "description": "Save words to learn later",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
